{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "@cloudflare/workers-types", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.js",
    "test/**/*.ts",
    "test/**/*.js",
    "workers/shared/**/*.ts",
    "workers/workers/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
