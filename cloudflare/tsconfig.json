{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "rootDir": "./",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["workers/shared/*"],
      "@workers/*": ["workers/*"]
    },
    "types": ["@cloudflare/workers-types"]
  },
  "include": [],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "./workers/shared" },
    { "path": "./workers/search-consumer" },
    { "path": "./workers/search-producer" }
  ]
}
